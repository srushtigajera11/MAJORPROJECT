<% layout("/layouts/boilerplate") %>
<body>
    <!-- <h3>All Listing</h3> -->
  <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-star"></i>
      <p>Top Rated</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>
      <p>Room</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-water-ladder"></i>
      <p>AmazingPools</p>
      </div>
    <div class="filter">
      <i class="fa-solid fa-mountain-sun"></i>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>
    <div class="filter">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>Beachfront</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-hotel"></i>
      <p>Mansion</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-champagne-glasses"></i>
      <p>Vineyard</p>
    </div>
    <div class="filter">
      <i class="fa-solid fa-tent"></i>
      <p>Camp</p>
    </div>

    <div class="tax-toggle">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Tax</label>
      </div>
    </div>

  </div>
  <% if(allListing.length > 0){ %>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for(listing of allListing){ %>
            <a href="/listing/<%= listing._id %>" class="listing-link">
            <div class="card card-listing col" style="width: 20rem;">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b> <br />
                    &#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                    <i id="tax">&nbsp;  +18% GST</i>
                    </p>
                </div>
              </div>
            </a>
        <% } %>
    </div>
    <%  }  else { %>
      <p class="text-center mt-4">No listings found for this country.</p>
  <% } %>
   

</body>
<script>
  let taxSwitch = document.getElementById('flexSwitchCheckDefault');
  taxSwitch.addEventListener('click', ()=>{
    if(taxSwitch.checked){
      document.querySelectorAll('#tax').forEach((tax)=>{
        tax.style.display = 'inline';
      });
    }else{
      document.querySelectorAll('#tax').forEach((tax)=>{
        tax.style.display = 'none';
      });
    }
  });
</script>